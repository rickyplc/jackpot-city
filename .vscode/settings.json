{
  "explorer.fileNesting.enabled": true,
  "explorer.fileNesting.patterns": {
    "tsconfig.json": "tsconfig.*.json, env.d.ts",
    "package.json": "package-lock.json, pnpm*, .yarnrc*, yarn*, .eslint*, eslint*, .oxlint*, oxlint*, .prettier*, prettier*, .editorconfig"
  },
  "editor.codeActionsOnSave": {
    "source.fixAll": "explicit"
  },
  "editor.formatOnSave": true,
  "editor.defaultFormatter": "esbenp.prettier-vscode",

  // Ensure JSON uses Prettier (not the built-in formatter)
  "[json]": { "editor.defaultFormatter": "esbenp.prettier-vscode" },
  "[jsonc]": { "editor.defaultFormatter": "esbenp.prettier-vscode" },
  "[json5]": { "editor.defaultFormatter": "esbenp.prettier-vscode" },

  // Prevent the built-in JSON formatter from ever taking over
  "json.format.enable": false,

  // Only format in projects that have a Prettier config
  "prettier.requireConfig": true,
  "prettier.useEditorConfig": true,

  // TypeScript SDK
  "typescript.tsdk": "node_modules/typescript/lib"
}
